<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/grdnt"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >

        <ImageView
            android:id="@+id/foto_perfil_comentario"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/shape_button_redondo"></ImageView>

        <TextView
            android:id="@+id/lbl_username_comentario"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:text="el cacas"
            android:textColor="@color/colorPrimary"
            android:padding="10dp">

        </TextView>

    </LinearLayout>

    <TextView
        android:id="@+id/lbl_contenido_comentario"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#fff"
        android:textSize="12dp"
        android:padding="15dp">

    </TextView>

    <View
        android:id="@+id/divider4"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/colorAccent" />


</LinearLayout>