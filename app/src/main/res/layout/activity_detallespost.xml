<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/grdnt"
    android:screenOrientation="portrait"
    >

    <TextView
        android:layout_marginTop="20dp"
        android:id="@+id/post_indirecta"
        android:layout_width="match_parent"
        android:textStyle="italic"
        android:textColor="@color/casi_blanco"
        android:textSize="20dp"
        android:padding="20dp"
        android:background="@drawable/shape_boton_sinfondo"
        android:layout_height="wrap_content"
        />

    <LinearLayout
        android:gravity="center"
        android:layout_marginTop="30dp"
        android:padding="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/txt_numero_likes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:padding="5dp"
            android:textColor="#ffffff"
            />


        <ImageView
            android:id="@+id/btn_like"
            android:layout_width="24dp"
            android:layout_marginRight="5dp"
            android:layout_height="24dp"
            android:src="@drawable/corazon_rojo"/>

        <TextView
            android:id="@+id/txt_num_comentarios_post"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:textStyle="bold"
            android:textColor="#ffffff"
            />

        <ImageView
            android:id="@+id/btn_coment"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginLeft="5dp"
            android:src="@drawable/comentario"
            />


    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/coments_re_pe">

    </androidx.recyclerview.widget.RecyclerView>

</LinearLayout>